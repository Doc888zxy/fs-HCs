#ReactomePAÂ ####
library(ReactomePA)
eReac <- enrichPathway(gene = diff_entrez$ENTREZID,
                       organism = 'human',
                       pvalueCutoff = 0.05)
eReacx <- setReadable(eReac, 'org.Hs.eg.db', 'ENTREZID')
colnames(eReac_result)
pdf('Reactome_dotplot.pdf',width = 10,height = 7)
dotplot(
  eReacx,
  x = "RichFactor",
  color = "p.adjust",
  showCategory=20,
  label_format = Inf
  )
dev.off()
eReac_result <- eReac@result
cnetplot <- cnetplot(eReacx, 
                      circular = TRUE, 
                      colorEdge = TRUE,
                      categorySize="pvalue",
                      showCategory =5,
                      layout ='kk')
cnetplot
