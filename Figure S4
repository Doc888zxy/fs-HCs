##Figure 4A-C
my.colors <- colorRampPalette(c("lightblue", "white", "darkred"))(100)
sce_m <- sce[,sce$cell_type == 'malignant cell']
FeaturePlot(sce_m, features = c('SLC2A2','KHK','ALDOB'), cols = my.colors,reduction = 'tsne')


